# Create the first useful Makefile: Variables
CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

# Executable
all: program

#Rules
program: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) -f *~ $(NAME)

oclean:
	$(RM) -f $(OBJ)

fclean:
	$(RM) -f *~ $(NAME)
	$(RM) -f $(OBJ)

re: oclean all
