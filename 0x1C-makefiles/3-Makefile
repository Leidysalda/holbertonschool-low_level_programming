# Create the first useful Makefile: Variables
CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton

# Executable
all: program

#Rules
program: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c
	$(CC) -c $< -o $@

clean:
        rm -f *~ $(NAME)

oclean:
        rm -f $(OBJ)

fclean:
        clean oclean

re:
        oclean all
