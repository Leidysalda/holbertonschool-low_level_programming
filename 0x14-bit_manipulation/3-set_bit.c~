#include "holberton.h"
/**
 * get_bit - function that returns the value of a bit at a given index.
 * @n: binary number
 * @index: position
 *
 * Return: unsigend or 0.
 */
int set_bit(unsigned long int *n, unsigned int index)
{

	print_binary(*n >> index);

	putchar ('0' + (n | index));

	if (index > 63)
		return (-1);

	n = n >> index;
	n = n & 1;

	return (n);
}
